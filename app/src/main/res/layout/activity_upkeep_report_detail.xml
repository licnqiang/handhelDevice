<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical"
    tools:context=".ui.activity.AssignOrderActivity">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/car_num"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="车牌：" />

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/maintain_company"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="维修单位：" />

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/maintain_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="维修价格：" />


            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/report_person"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:comment_item_title="上报人：" />

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="所属区域：" />

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/station_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:comment_item_title="所属站点："></cn.piesat.sanitation.ui.view.CommentItemModul>

            <LinearLayout
                android:id="@+id/ll_bz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修原因描述"
                    android:textColor="@color/them_black_font"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_bz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|top"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/them_black_font"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/comment_click_state"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="保养照片"
                    android:textColor="@color/them_black_font"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_paizhao_xianchang"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/paizhao" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/comment_click_state"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="保养单照片"
                    android:textColor="@color/them_black_font"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_paizhao_order"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/paizhao" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/approval_state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/btn_pass"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_frame_selector"
                    android:text="通过"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_del"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_frame_red_selector"
                    android:text="驳回"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>