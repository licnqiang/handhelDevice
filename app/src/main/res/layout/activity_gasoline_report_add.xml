<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical"
    tools:context=".ui.activity.AssignOrderActivity">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/car_num"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="车牌：" />

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/gaso_line_person"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="加油人：" />

            <cn.piesat.sanitation.ui.view.CommentItemInputModul
                android:id="@+id/goso_line_station"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="加油站点：" />
            <cn.piesat.sanitation.ui.view.CommentItemInputModul
                android:id="@+id/before_mileage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="加油前里程数：" />
            <cn.piesat.sanitation.ui.view.CommentItemInputModul
                android:id="@+id/goso_line_money"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="加油金额：" />
            <cn.piesat.sanitation.ui.view.CommentItemInputModul
                android:id="@+id/goso_line_litre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="加油升数：" />

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/report_person"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:comment_item_title="上报人：" />
            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:comment_item_title="所属区域：" />

            <cn.piesat.sanitation.ui.view.CommentItemModul
                android:id="@+id/station_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:comment_item_title="所属站点："></cn.piesat.sanitation.ui.view.CommentItemModul>

            <LinearLayout
                android:id="@+id/ll_bz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textColor="@color/them_black_font"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/order_bz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|top"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/them_black_font"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/comment_click_state"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="图片"
                    android:textColor="@color/them_black_font"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_paizhao"
                    android:layout_width="80dp"
                    android:scaleType="fitXY"
                    android:layout_height="80dp"
                    android:src="@mipmap/paizhao" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_click_state"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>