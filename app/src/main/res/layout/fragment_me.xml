<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_30">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@mipmap/icon_head_default"/>-->

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shape_user_head_bg"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="w"
                        android:textColor="@color/white"
                        android:textSize="38dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="用户名"
                        android:textColor="@color/color_3c3c3c"
                        android:textSize="@dimen/text_18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescription"
                        style="@style/text_14_33"
                        android:text="11111"
                        android:textColor="@color/color_9e9e9e"
                        android:layout_marginTop="@dimen/dp_5"
                        />

                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:id="@+id/imgExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/icon_exit" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="0.8"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layoutAttendance"
                style="@style/linear_layout_default"

                >

                <TextView
                    android:id="@+id/tvAttendance"
                    style="@style/text_14_33"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_kaoqin"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="我的考勤"
                    android:textColor="@color/color_3c3c3c"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/icon_arraw_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="25dp"
                android:background="@color/color_background" />

            <LinearLayout
                android:id="@+id/layoutModify"
                android:visibility="gone"
                style="@style/linear_layout_default"

                >

                <TextView
                    style="@style/text_14_33"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_shangbao"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="我的上报"
                    android:textColor="@color/color_3c3c3c"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/icon_arraw_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="25dp"
                android:background="@color/color_background" />

            <LinearLayout
                android:id="@+id/layoutEdit"
                style="@style/linear_layout_default"

                >

                <TextView
                    style="@style/text_14_33"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_edit"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="信息修改"
                    android:textColor="@color/color_3c3c3c"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/icon_arraw_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="25dp"
                android:background="@color/color_background" />
            <!--    <LinearLayout
                    style="@style/linear_layout_default"

                    >
                    <TextView
                        style="@style/text_14_33"
