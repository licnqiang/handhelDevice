<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:id="@+id/baoxian_nianjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:work_modul_icon="@mipmap/zhixingdingdan"
            app:work_modul_title="保险年检"></cn.piesat.sanitation.ui.view.MyWorkModul>


        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:id="@+id/weixiu_shenpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:work_modul_icon="@mipmap/station_apply"
            app:work_modul_title="维修审批"></cn.piesat.sanitation.ui.view.MyWorkModul>

        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:id="@+id/baoyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:work_modul_icon="@mipmap/station_send"
            app:work_modul_title="保养审批"></cn.piesat.sanitation.ui.view.MyWorkModul>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="记录"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:work_modul_icon="@mipmap/device_service"
            app:work_modul_title="设备维护"></cn.piesat.sanitation.ui.view.MyWorkModul>

        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:work_modul_icon="@mipmap/car_fault"
            app:work_modul_title="车辆故障"></cn.piesat.sanitation.ui.view.MyWorkModul>

        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:work_modul_icon="@mipmap/station_send"
            app:work_modul_title="加油上报"></cn.piesat.sanitation.ui.view.MyWorkModul>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="常用功能"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="invisible">

        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:work_modul_icon="@mipmap/send"
            app:work_modul_title="派单"></cn.piesat.sanitation.ui.view.MyWorkModul>


        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:work_modul_icon="@mipmap/people"
            app:work_modul_title="人员"></cn.piesat.sanitation.ui.view.MyWorkModul>

        <cn.piesat.sanitation.ui.view.MyWorkModul
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:work_modul_icon="@mipmap/ic_launcher"
            app:work_modul_title="设备维护"></cn.piesat.sanitation.ui.view.MyWorkModul>
    </LinearLayout>


</LinearLayout>