<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="linear_layout_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:background">@drawable/linear_layout_pressed_default</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="text_14_33">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_14dp</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>


    <style name="text_14_33_match_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_14dp</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="text_14_5b">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_14dp</item>
        <item name="android:textColor">@color/color_5b5b5b</item>
    </style>

    <style name="edit_14_33">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_14dp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:hint">请输入</item>

    </style>
    
    <style name="linear_layout_current">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/comment_click_state</item>
        <item name="android:padding">@dimen/text_15dp</item>
    </style>
</resources>
